{
  "extends": "plasmo/templates/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "chrome"
    ]
  },
  "include": [
    ".plasmo/index.d.ts",
    "plasmo.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
